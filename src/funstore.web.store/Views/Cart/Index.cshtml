@model System.Collections.Generic.List<CartItem>
    @{
    ViewData["Title"] = "View Cart Contents";
    }
    <h2>@ViewData["Title"].</h2>
    <h3>@ViewData["Message"]</h3>

    <table class="table table-striped">
        <thead>
            <th>Item Id</th>
            <th>Quantity</th>
            <th>Description</th>
            <th></th>
        </thead>
        <tbody>
            @if(Model?.Count > 0) {
            foreach(var i in Model){
            <tr>
                <td>@i.ItemId</td>
                <td>@i.Count</td>
                <td>@i.Item?.Name</td>
                <td class="text-center"><a asp-controller="cart" asp-action="remove" asp-route-id="@i.ItemId" class="btn btn-danger">remove</a></td>
            </tr>
            }
            } else {
            <tr><td colspan="2">No items yet, go have some fun!</td></tr>}
        </tbody>
    </table>
    <h5 class="text-right"><a asp-controller="order" asp-action="place" class="btn btn-primary">Place Order</a></h5>
